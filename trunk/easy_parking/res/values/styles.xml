 <style name="customButton" prarent="android:style/Widget.button">    
        <item name="android:gravity">center_vertical|center_horizontal</item>  
        <item name="android:textColor">@color/btnTextColor</item>  
        <item name="android:shadowColor">#FF000000</item>  
        <item name="android:shadowDx">0</item>  
        <item name="android:shadowDy">-1</item>  
        <item name="android:shadowRadius">0.1</item>  
        <item name="android:textSize">@dimen/textSize</item>  
        <item name="android:textStyle">bold</item>  
        <item name="android:background">@drawable/btn_custom</item>  
        <item name="android:focusable">true</item>  
        <item name="android:clickable">true</item>  
    </style>    
    
